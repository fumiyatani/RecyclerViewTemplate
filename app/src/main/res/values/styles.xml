<resources>

    <!-- デフォルトのActionBarを無くすためのテーマ -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <!-- BottomNavigationViewで使用するテーマ -->
    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="android:textColorSecondary">@color/lightGray</item>
    </style>

</resources>
